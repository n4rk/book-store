{% extends 'base.html.twig' %}

{% block body %}
	{% if livres|length > 0  %}
		<h1>Livres</h1>

		<table id="livres" class="table">
			<thead>
				<tr>
					<th>Isbn</th>
					<th>Titre</th>
					<th>Nombre de pages</th>
					<th>Date de parution</th>
					<th>Note</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for livre in livres %}
					<tr>
						<td>{{ livre.isbn }}</td>
						<td>{{ livre.titre }}</td>
						<td>{{ livre.nombrePages }}</td>
						<td>{{ livre.dateDeParution ? livre.dateDeParution|date('Y-m-d') : '' }}</td>
						<td>{{ livre.note }}</td>
						<td>
							<div class="row">
								<div class="col">
									<a class="p-2 text-dark" href="{{ path('livre_show', {'id': livre.id}) }}"><i class="bi bi-eye-fill"></i></a>
								</div>
									{% if is_granted('ROLE_ADMIN') %}
									<div class="col">    
										<a class="p-2 text-success" href="{{ path('livre_edit', {'id': livre.id}) }}"><i class="bi bi-pencil-square"></i></a>
									</div>
									<div class="col">
										{{ include('livre/_delete_form.html.twig') }}
									</div>
									{% endif %}
								</div>
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	{% else %}
		<p class="alert alert-danger">Aucun r√©sultat !</p>
	{% endif %}
{% endblock %}

{% block javascripts %}
	<script src="/js/main.js"></script>
{% endblock %}
